{
    "name": "senky/relativedates",
    "type": "phpbb-extension",
    "description": "Relative dates. Relative dates everywhere! This extension prints almost all dates in relative format (i.e. 3 days ago). Except for ones that we really want to see in absolute form. Mouseover exact date guaranteed.",
    "version": "1.1.0",
    "time": "2016-03-19",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Jakub Senko",
            "email": "jakubsenko@gmail.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.6",
        "jenssegers/date": "~3.2",
        "phpbb/phpbb": ">=3.1.0"
    },
    "require-dev": {
        "phpbb/epv": "dev-master"
    },
    "extra": {
        "display-name": "Relative dates",
        "soft-require": {
            "phpbb/phpbb": ">=3.1.0"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/relative_dates",
            "filename": "version_check"
        }
    }
}